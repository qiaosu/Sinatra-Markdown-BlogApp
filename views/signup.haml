%header{:id => "top"}
  %h1
    %a.clearfix{:href => "#"}
      %b
      %i
      %span Stock Diary
  %nav.menu
    %ul
      - if current_user
        %li.nav-blog.active
          %a{:href => "#"} Blog
        %li.nav-logout
          %a{:href => "/logout"} logout
      - else
        %li.nav-login
          %a{:href => "/login"} login
        %li.nav-register
          %a{:href => "/signup"} register
%section#content
  %h3 
    Register
  %hr
  - if session[:errors]
    %ul
      - for error in session[:errors]
        %li= error
  %form{:action => "/signup", :method => "post"}
    %p
      %label{:for => "user[email]"} Email
      %br/
      %input{:type => "text", :name => "user[email]", :value => "#{params[:email]}"}/
    %p
      %label{:for => "user[password]"} Password
      %br/
      %input{:type => "password", :name => "user[password]"}/
    %p
      %label{:for => "user[password_confirmation]"} Password Confirmation
      %br/
      %input{:type => "password", :name => "user[password_confirmation]"}/
    %input.btn.btn-large.btn-primary{:type => "submit", :value => "Register"}/
